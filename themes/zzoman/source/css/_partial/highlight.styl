// https://github.com/chriskempson/tomorrow-theme
highlight-background = #2d2d2d
highlight-current-line = #e3e3e3
highlight-selection = #262a30
highlight-foreground = #ccc
highlight-comment = #8e908c
highlight-red = #f2777a
highlight-orange = #f99157
highlight-yellow = #eab700
highlight-green = #9c9
highlight-aqua = #6cc
highlight-blue = #69c
highlight-purple = #c9c

$code-block
  background highlight-background
  margin spacing-unit 0
  padding spacing-unit spacing-unit * 1
  border-style solid
  border-color color-border
  border-width 0
  overflow auto
  color highlight-foreground
  line-height line-height
  font-size 0.875em
  

$line-numbers
  //background #1b1b1b
  color #999
  font-size 0.875em

.article-content
  pre, code
    //font-family font-mono
    font-family menlo, monaco, monospace
    font-size font-size-smaller
    font-weight bold
  code
    background #2d2d2d
    margin: 0.250em
    color #ccc
    border-radius 0.1875em
    padding 0.125em 0.3em
    line-height 1.6
  pre
    @extend $code-block
    code
      background none
      text-shadow none
      padding 0
  .highlight
    @extend $code-block
    pre
      border none
      margin 0
      padding 0
      overflow auto
    table
      margin 0
      width auto
    td
      border none
      padding 0
    figcaption
      clearfix()
      font-size 0.85em
      color highlight-comment
      line-height 1em
      margin-bottom 1em
      a
        float right
    .gutter pre
      @extend $line-numbers
      text-align right
      padding-right 20px
    .line
      height font-size * 1.3
  .gist
    margin 0
    border-style solid
    border-color color-border
    border-width 1px 0
    background highlight-background
    padding 15px spacing-unit 15px 0
    .gist-file
      border none
      font-family font-mono
      margin 0
      .gist-data
        background none
        border none
        .line-numbers
          @extend $line-numbers
          background none
          border none
          padding 0 20px 0 0
        .line-data
          padding 0 !important
      .highlight
        margin 0
        padding 0
        border none
        background transparent
      .gist-meta
        background highlight-background
        color highlight-comment
        font 0.85em font-sans
        text-shadow 0 0
        padding 0
        margin-top 1em
        margin-left spacing-unit
        a
          color color-link
          font-weight normal
          &:hover
            text-decoration underline

pre
  .comment
    color highlight-comment  
  .title
    color highlight-aqua
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
    color highlight-red
  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
    color highlight-orange
  .class
  .ruby .class .title
  .css .rules .attribute
    color highlight-green
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color highlight-green
  .css .hexcolor
    color highlight-aqua
  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color highlight-blue
  .keyword
  .javascript .function
    color highlight-purple